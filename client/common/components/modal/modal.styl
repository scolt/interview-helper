.modal-overlay
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,0.5)
    z-index 50

.modal
    position absolute
    background #fff
    top 50%
    left 50%
    max-width 90%
    width 400px
    transform translate(-50%, -50%)

.modal-header
    background #f44336
    color #fff
    padding 8px
    font-size 20px
    text-transform capitalize
    display flex
    justify-content space-between

    .material-icons
        color: #fff !important;
        padding: 20px;
        position: absolute !important;
        top: -10px;
        right: -10px;

.modal-body
    padding 10px
    max-height: 70vh;
    overflow: auto;

    .main-message
        display flex
        align-items: center;

    .icon .material-icons
        font-size 40px !important
        padding-right 20px

.modal-footer
    display flex
    & > *
        width 50%

.warning
    .icon .material-icons
        color #f44336 !important
